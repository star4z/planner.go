<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings">

    <PreferenceCategory android:title="@string/appearance">
        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_dark_mode"
            android:layout="@layout/preference"
            android:title="Dark mode" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_class_colors_enabled"
            android:layout="@layout/preference"
            android:title="@string/pref_class_colors" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_time_enabled"
            android:layout="@layout/preference"
            android:title="@string/pref_show_time" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_priority_first"
            android:layout="@layout/preference"
            android:title="@string/pref_enable_priority" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_overdue_last"
            android:layout="@layout/preference"
            android:title="@string/pref_overdue_last" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/experience">
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_save_remind"
            android:layout="@layout/preference"
            android:title="@string/pref_save_remind" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_drive_single_mode"
            android:layout="@layout/preference"
            android:title="@string/pref_drive_single_mode" />

        <Preference
            android:key="NOTIFICATIONS_KEY"
            android:layout="@layout/preference"
            android:persistent="false"
            android:title="@string/pref_notifications" />
    </PreferenceCategory>

</PreferenceScreen>