<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        tools:context="go.planner.plannergo.MainActivity"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9f9f9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/due_today"
                style="@style/DueDateHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Today" />

            <TextView
                android:id="@+id/due_tomorrow"
                style="@style/DueDateHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Tomorrow" />

            <TextView
                android:id="@+id/upcoming"
                style="@style/DueDateHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upcoming" />

            <TextView
                android:id="@+id/overdue"
                style="@style/DueDateHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overdue" />


        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_black_24dp"
        android:onClick="addNewEvent"
        app:fabSize="normal" />

</RelativeLayout>