<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nBar_item_outer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:background="@color/backgroundWhite"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nBar_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:background="@drawable/bg_menu_item_selected"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:id="@+id/nBar_item_icon"
            android:layout_width="wrap_content"
            android:minWidth="24dp"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:layout_gravity="center"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="0dp"
            android:contentDescription="@string/list_item_icon"
            android:src="@drawable/ic_clipboard_grey_24dp" />

        <TextView
            android:id="@+id/nBar_item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/textGrey"
            android:textAlignment="gravity"
            tools:text="@string/default_title" />
    </LinearLayout>
</LinearLayout>
